@model Do_An_WTT.Models.PHANLOAI

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div style="margin: 25px auto 100px auto;">
    <h2 style="text-align:center">Xóa thông tin loại cá</h2>
    <div>
        <hr />
        <table class="table table-striped">
            <tr>
                <td>Tên loại cá</td>
                <td>@Html.DisplayFor(model => model.TenLoai)</td>
            </tr>
            <tr>
                <td colspan="2"><h4 style="text-align:center">Bạn có chắc muốn xóa loại cá này?</h4></td>
            </tr>
        </table>
        @using(Html.BeginForm()) {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color" style="display:flex; justify-content:center">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a class="nav-link" href="@Url.Action("Index", "QLLoaiCa")">
                    <span>Back to List</span>
                </a>
            </div>
        }
    </div>
</div>
