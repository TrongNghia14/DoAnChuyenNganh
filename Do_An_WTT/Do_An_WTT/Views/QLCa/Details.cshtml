@model Do_An_WTT.Models.CA

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div style="margin: 25px auto 100px auto; display:flex; justify-content:center">
    <div>
        <h2 style="text-align:center; margin-top:25px">Chi tiết cá: @Html.DisplayFor(model => model.TenCa)</h2>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    Tên cá:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TenCa)
                </dd>

                <dt>
                    Giá bán:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.GiaBan)
                </dd>

                <dt>
                    Số lượng tồn:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.SoLuongTon)
                </dd>

                <dt>
                    Ngày cập nhập:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.NgayCapNhap)
                </dd>

                <dt>
                    Ảnh bìa
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.AnhBia)
                </dd>

                <dt>
                    Mô tả
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.MoTa)
                </dd>

                <dt>
                    Mã nhà cung cấp:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.MaNCC)
                </dd>

                <dt>
                    Mã loại:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.MaLoai)
                </dd>

            </dl>
        </div>
        <div style="display:flex; justify-content:center; font-size:larger">
            <a class="btn btn-success" href="@Url.Action("Edit", "QLCa", new { id = Model.MaCa })">
                <span>Edit</span>
            </a>
            <a class="nav-link" href="@Url.Action("Index", "QLCa")">
                <span>Back to List</span>
            </a>
        </div>
    </div>
</div>

                    
